<%= render 'layouts/navigationsu' %>

<div class="container-fluid", id="devise-style">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Sign in</h2>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
        <%= devise_error_messages! %>


        <form>
          <div class="form-group">
            <%= f.label :login %><br />
            <%= f.text_field :login, class: "form-control", autofocus: true,
                                    placeholder: "E-mail or username"%>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: "form-control", autofocus: true,
                                    placeholder: "Password"%>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
      <% end %>



          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-lg btn-success" %>&nbsp;&nbsp;&nbsp;



          </div>

  </br>

          <div class="panel-footer">
            <%= render "devise/shared/links" %>

          </div>
        <% end %>


        </form>
      </div>

    </div>

</div>
